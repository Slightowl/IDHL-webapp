@inherits OwningComponentBase
@using IDHLDeveloperTest.Models;
@using IDHLDeveloperTest.Services;

<div class="card">
    <h5 class="card-header"> Placeholder @character.name</h5>
    <div class="card-body">
        <p>Films: @character.films</p>
        <p>TV shows: @character.tvShows</p>
        <p>Video Games: @character.videoGames</p>
        <a href="#" class="btn btn-primary">Go back</a>
    </div>
</div>

@code {
    protected IClientService clientService;
    private CharacterList characterList = new CharacterList();
    private Character character = new Character();

    protected override async Task OnInitializedAsync()
    {
        clientService = (IClientService)ScopedServices.GetService(typeof(IClientService));
        characterList = await clientService.GetCharacters(1);
    }
}